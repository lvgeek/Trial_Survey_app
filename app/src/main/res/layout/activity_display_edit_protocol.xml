<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="rhdr.afrl.trialsurvey.DisplayEditProtocolActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/title_activity_display_edit_protocol"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="50sp"
        android:textStyle="bold" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spnrProdocolID"
        android:layout_below="@+id/textView"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:textSize="40sp"
        android:layout_toRightOf="@+id/textView2" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/intNumSubjects"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/spnrProdocolID"
        android:layout_marginTop="60dp"
        android:editable="true"
        android:enabled="true"
        android:textSize="40sp"
        android:hint="Number of Subjects"
        android:clickable="false"
        android:layout_toRightOf="@+id/textView3" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/intNumShotcode"
        android:layout_below="@+id/intNumSubjects"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:enabled="true"
        android:textSize="40sp"
        android:hint="Number of Shotcodes"
        android:editable="true"
        android:layout_toRightOf="@+id/textView4" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btnSave"
        android:id="@+id/btnSave"
        android:textSize="40sp"
        android:enabled="true"
        android:textAlignment="center"
        android:height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:clickable = "false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/ProtocolID"
        android:id="@+id/textView2"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_marginRight="5dp"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/spnrProdocolID"
        android:layout_marginBottom="7dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Subjects"
        android:id="@+id/textView3"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_alignBaseline="@+id/intNumSubjects"
        android:layout_marginRight="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Shotcodes"
        android:id="@+id/textView4"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_alignBaseline="@+id/intNumShotcode"
        android:layout_marginRight="5dp" />

</RelativeLayout>
