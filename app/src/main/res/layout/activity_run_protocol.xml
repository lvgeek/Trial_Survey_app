<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/DrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="7dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".RunProtocolActivity"
        tools:showIn="@layout/activity_run_protocol">


        <include
            android:id="@+id/tool_bar"
            layout="@layout/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </include>

        <Spinner
            android:id="@+id/spnrProtocolID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="false"
            android:background="@color/button_material_light"
            android:clickable="true"
            android:spinnerMode="dropdown"
            android:prompt="@string/pmtProtocol"
            android:entries="@array/protocol_list"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textAlignment="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_toRightOf="@+id/txtProtocol"
            android:layout_alignBaseline="@+id/txtProtocol"/>

        <Spinner
            android:id="@+id/spnrmedMonitorID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="false"
            android:background="@color/button_material_light"
            android:clickable="true"
            android:spinnerMode="dropdown"
            android:entries="@array/medMonitor_list"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textAlignment="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_alignBaseline="@+id/txtmedMonitor"
            android:layout_toRightOf="@+id/txtmedMonitor"/>

        <Spinner
            android:id="@+id/spnrSubjectID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="false"
            android:background="@color/button_material_light"
            android:clickable="true"
            android:spinnerMode="dropdown"
            android:prompt="@string/pmtSubject"
            android:entries="@array/subject_list"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textAlignment="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_alignBaseline="@+id/txtSubject"
            android:layout_toRightOf="@+id/txtSubject"/>

        <Spinner
            android:id="@+id/spnrShotCodeID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="false"
            android:background="@color/button_material_light"
            android:clickable="true"
            android:spinnerMode="dropdown"
            android:prompt="@string/pmtShotcode"
            android:entries="@array/shotcode_list"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textAlignment="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_alignBaseline="@+id/txtShotcode"
            android:layout_toRightOf="@+id/txtShotcode"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnRunTrial"
            android:id="@+id/btnRunTrial"
            android:textSize="40sp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:onClick="showRunTrial"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/pmtProtocol"
            android:id="@+id/txtProtocol"
            android:layout_alignParentStart="false"
            android:layout_below="@+id/tool_bar"
            android:layout_marginTop="20dp"
            android:textSize="25sp"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/pmtSubject"
            android:id="@+id/txtSubject"
            android:layout_alignParentStart="false"
            android:layout_marginTop="60dp"
            android:textSize="25sp"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:layout_below="@+id/txtmedMonitor"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/pmtmedMonitor"
            android:id="@+id/txtmedMonitor"
            android:layout_alignParentStart="false"
            android:layout_marginTop="60dp"
            android:textSize="25sp"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:layout_below="@+id/txtProtocol"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/pmtShotcode"
            android:id="@+id/txtShotcode"
            android:layout_alignParentStart="false"
            android:layout_below="@+id/txtSubject"
            android:layout_marginTop="60dp"
            android:textSize="25sp"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            />

    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>
