<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

<TextView android:id="@+id/tvID"
    android:text="ID"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_marginRight="10dp" />
<TextView android:id="@+id/tvProtocolID"
    android:text="ProtocolID"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_marginRight="10dp"
    android:layout_toRightOf="@+id/tvID" />
<TextView android:id="@+id/tvNumSubjects"
    android:text="Subjects"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_toRightOf="@+id/tvProtocolID"
    android:layout_marginRight="10dp" />
<TextView android:id="@+id/tvNumShotcode"
    android:text="Shotcodes"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_toRightOf="@+id/tvNumSubjects" />
</RelativeLayout>